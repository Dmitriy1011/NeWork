<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="#FEF7FF"
            android:padding="16dp">

            <ImageView
                android:id="@+id/eventInDetailsAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/default_ava" />

            <TextView
                android:id="@+id/eventInDetailsAuthorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/post_s_author"
                app:layout_constraintBottom_toTopOf="@id/eventInDetailsAuthorJob"
                app:layout_constraintEnd_toStartOf="@id/eventInDetailsMenuButton"
                app:layout_constraintStart_toEndOf="@id/eventInDetailsAvatar"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/eventInDetailsAuthorJob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/author_job"
                app:layout_constraintEnd_toStartOf="@id/eventInDetailsMenuButton"
                app:layout_constraintStart_toEndOf="@id/eventInDetailsAvatar"
                app:layout_constraintTop_toBottomOf="@id/eventInDetailsAuthorName" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eventInDetailsMenuButton"
                style="@style/Widget.AppTheme.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:icon="@drawable/menu_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/eventInDetailsAttachmentImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/eventInDetailsAvatar" />

            <TextView
                android:id="@+id/eventInDetailsPublishedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/published_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eventInDetailsAttachmentImage" />

            <TextView
                android:id="@+id/eventInDetailsTextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/postTextContent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eventInDetailsPublishedDate" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eventInDetailsLikeButton"
                style="@style/Widget.AppTheme.LikeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:checkable="true"
                app:icon="@drawable/ic_like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/likersTitle"
                tools:checked="false"
                tools:text="1" />

            <TextView
                android:id="@+id/speakersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eventInDetailsTextContent"
                android:text="@string/speakers"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/speakersList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/speakersTitle"
                tools:listitem="@layout/card_image" />

            <TextView
                android:id="@+id/likersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/likers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/speakersList" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/likersListShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/eventInDetailsLikeButton"
                app:layout_constraintStart_toEndOf="@id/eventInDetailsLikeButton"
                app:layout_constraintTop_toTopOf="@id/eventInDetailsLikeButton"
                tools:listitem="@layout/card_image" />

            <ImageButton
                android:id="@+id/moreLikersButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="@id/likersListShort"
                app:layout_constraintStart_toEndOf="@id/likersListShort"
                app:layout_constraintTop_toTopOf="@id/likersListShort"
                app:srcCompat="@drawable/more_likers_button_image" />

            <TextView
                android:id="@+id/participantsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/participants"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eventInDetailsLikeButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eventInDetailsMentionedButton"
                style="@style/Widget.AppTheme.LikeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                app:icon="@drawable/people_outline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/participantsTitle"
                tools:checked="false"
                tools:text="1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/participantsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/eventInDetailsMentionedButton"
                app:layout_constraintStart_toEndOf="@id/eventInDetailsMentionedButton"
                app:layout_constraintTop_toTopOf="@id/eventInDetailsMentionedButton"
                tools:listitem="@layout/card_image" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>
