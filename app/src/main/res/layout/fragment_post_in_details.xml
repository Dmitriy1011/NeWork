<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/toolbar_post_in_details" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="#FEF7FF"
            android:padding="16dp">

            <ImageView
                android:id="@+id/postInDetailsAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/default_ava" />

            <TextView
                android:id="@+id/postInDetailsAuthorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/post_s_author"
                app:layout_constraintBottom_toTopOf="@id/postInDetailsAuthorJob"
                app:layout_constraintEnd_toStartOf="@id/postInDetailsMenuButton"
                app:layout_constraintStart_toEndOf="@id/postInDetailsAvatar"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/postInDetailsAuthorJob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/author_job"
                app:layout_constraintEnd_toStartOf="@id/postInDetailsMenuButton"
                app:layout_constraintStart_toEndOf="@id/postInDetailsAvatar"
                app:layout_constraintTop_toBottomOf="@id/postInDetailsAuthorName" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/postInDetailsMenuButton"
                style="@style/Widget.AppTheme.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:icon="@drawable/menu_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/postInDetailsAttachmentImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/postInDetailsAvatar" />

            <TextView
                android:id="@+id/postInDetailsPublishedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/published_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/postInDetailsAttachmentImage" />

            <TextView
                android:id="@+id/postInDetailsTextContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/postTextContent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/postInDetailsPublishedDate" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/postInDetailsLikeButton"
                style="@style/Widget.AppTheme.LikeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:checkable="true"
                app:icon="@drawable/ic_like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/likersTitle"
                tools:checked="false"
                tools:text="1" />

            <TextView
                android:id="@+id/likersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/likers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/postInDetailsTextContent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/likersListShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/postInDetailsLikeButton"
                app:layout_constraintStart_toEndOf="@id/postInDetailsLikeButton"
                app:layout_constraintTop_toTopOf="@id/postInDetailsLikeButton"
                tools:listitem="@layout/card_image" />

            <ImageButton
                android:id="@+id/moreLikersButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="@id/likersListShort"
                app:layout_constraintStart_toEndOf="@id/likersListShort"
                app:layout_constraintTop_toTopOf="@id/likersListShort"
                app:srcCompat="@drawable/more_likers_button_image" />

            <TextView
                android:id="@+id/mentionedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mentioned"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/postInDetailsLikeButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/postInDetailsMentionedButton"
                style="@style/Widget.AppTheme.LikeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                app:icon="@drawable/people_outline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mentionedTitle"
                tools:checked="false"
                tools:text="1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mentionedListShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/postInDetailsMentionedButton"
                app:layout_constraintStart_toEndOf="@id/postInDetailsMentionedButton"
                app:layout_constraintTop_toTopOf="@id/postInDetailsMentionedButton"
                tools:listitem="@layout/card_image" />

            <com.yandex.mapkit.mapview.MapView
                android:id="@+id/postInDetailsMapView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintTop_toBottomOf="@id/mentionedListShort"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>
